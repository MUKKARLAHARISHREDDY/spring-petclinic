pipeline {
    agent { label 'OPENJDK-11-JDK' }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/MUKKARLAHARISHREDDY/spring-petclinic.git',
                branch:'main'
            }
        }
        stage('build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install'
            }
        }
        stage('archive results') {
            steps {
                junit 'target/surefire-reports/**/*.xml'
            }
        }
    }
} 

