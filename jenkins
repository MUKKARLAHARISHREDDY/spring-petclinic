pipeline {
    agent { label 'OPENJDK-11-JDK' }
    parameters {
        choice(name: 'BRANCH_TO_BUILD', choices: ['main'], description: 'Branch to build')
        string(name: 'MAVEN_GOAL', defaultValue: 'package', description: 'maven goal')

    }
    triggers {
        pollSCM('* * * * * ')
        }
        
    stages {
        stage('vcs') {
            steps {
                mail subject:'build started for jenkins JOB $env.JOB_NAME',
                body:'build started for jenkins JOB $env.JOB_NAME',
                to : 'mukkarlaharishreddy302@gmail.com'
                git url: 'https://github.com/MUKKARLAHARISHREDDY/spring-petclinic.git',
                branch: "${params.BRANCH_TO_BUILD}"
            }
        }
        stage('build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install'

            }
        }
        stage('archive results') {
            steps {
                junit 'target/surefire-reports/**/*.xml'
            }
        }
    }
    post {
        always {
            echo 'job completed'
            mail subject:'build completed for jenkins JOB $env.JOB_NAME',
            body:'build completed for jenkins JOB $env.JOB_NAME \n Click here: $env.JOB_URL ',
            to: 'mukkarlaharishreddy302@gmail.com'
       }
       failure {
        mail subject:'build failed for jenkins JOB $env.JOB_NAME with BUILD ID $env.BUILT_ID',
            body:'build failed for jenkins JOB $env.JOB_NAME',
            to: "mukkarlaharishreddy302@gmail.com"

       }
       success {
         junit 'target/surefire-reports/**/*.xml'

       }
    }
} 
